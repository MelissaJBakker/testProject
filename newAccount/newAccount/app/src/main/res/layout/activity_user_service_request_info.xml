<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide Your Information:"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/userApplicationFName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:visibility="gone" />

        <EditText
            android:id="@+id/userApplicationLName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:visibility="gone" />

        <EditText
            android:id="@+id/userApplicationDOB"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:visibility="gone" />

        <EditText
            android:id="@+id/userApplicationAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/userApplicationLicenseType"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:visibility="gone" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>